    ViewData["Title"] = "Movies";
}

<!-- Movies Hero Section -->
<section>
        <div>
        <!-- Movies Hero Swiper -->
        @if (Model.HeroMovies != null && Model.HeroMovies.Any())
        {
            @await Html.PartialAsync("_MovieSwiper", Model.HeroMovies)
